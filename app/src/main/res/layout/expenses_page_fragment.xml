<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.shlomikatriel.expensesmanager.ui.expensespage.fragments.ExpensesPageFragment" />

        <variable
            name="fragment"
            type="ExpensesPageFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/expenses_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">

                <TextView
                    android:id="@+id/delete_expense_hint"
                    style="@style/HintTextView"
                    android:text="@string/hint_long_press_to_delete_expense"
                    app:drawableStartCompat="@drawable/info"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/vertical_line"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/delete_expense_hint" />

                <TextView
                    android:id="@+id/expenses_title"
                    style="@style/ColumnsTitle"
                    android:text="@string/expenses_title"
                    app:layout_constraintEnd_toStartOf="@id/vertical_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/delete_expense_hint"/>

                <TextView
                    android:id="@+id/monthly_expenses_title"
                    style="@style/ColumnsTitle"
                    android:text="@string/monthly_expenses_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/vertical_line"
                    app:layout_constraintTop_toBottomOf="@id/delete_expense_hint" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/expenses_recycler"
                    style="@style/Recycler"
                    app:layout_constraintEnd_toStartOf="@id/vertical_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/expenses_title"
                    tools:itemCount="4"
                    tools:listitem="@layout/expense_recycler_item" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/monthly_expenses_recycler"
                    style="@style/Recycler"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/vertical_line"
                    app:layout_constraintTop_toBottomOf="@id/monthly_expenses_title"
                    tools:itemCount="6"
                    tools:listitem="@layout/expense_recycler_item" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/add_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:onClick="@{(v) -> fragment.addExpenseClicked(v, false)}"
                    app:layout_constraintEnd_toStartOf="@id/vertical_line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/expenses_recycler"
                    app:srcCompat="@drawable/add" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/add_monthly_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:onClick="@{(v) -> fragment.addExpenseClicked(v, true)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/vertical_line"
                    app:layout_constraintTop_toBottomOf="@id/monthly_expenses_recycler"
                    app:srcCompat="@drawable/add" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:text="4362â‚ª"
            tools:textColor="@color/green" />
    </LinearLayout>
</layout>